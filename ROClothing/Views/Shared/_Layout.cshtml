<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ROClothing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ROClothing.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="topmost-header bg-black text-center p-2">
            <p class="text-light">Get Up to 40% OFF New Clothing Deals <span>* Limited time only</span></p>
        </div>

        <!--  -----     Before Navigation ---------    -->
        <div class="container">
            <div class="phone-logo-group">
                <div class="col phone-group">
                    <i class="bi bi-telephone-fill"></i>
                    <div class="phone-no-group">
                        <p><span>CALL US NOW</span><br />
                        +123 4567 890</p>
                    </div>
                </div>

                <div class="col logo-container">
                    <a href="~/../Index"><img src="~/images/pageimages/reenclothing.png" /></a>
                </div>
                <div class="col text-end">
                    <div class="top-icons">
                        <i class="bi bi-person"></i>
                        <i class="bi bi-search"></i>
                        <i class="bi bi-cart-plus"></i>
                    </div>
                </div>
            </div>
        </div>


        <!--  -----     Navigation ---------    -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="CProduct" asp-action="Index">PRODUCTS</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-gear"></i> Content Management
                          </a>
                          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Index">Products</a></li>
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">Categories</a></li>
                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="ProductType" asp-action="Index">Product Type</a></li>
                          </ul>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />
                   
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

     <footer class="bg-dark my-footer text-light">
        <div class="container">
            <div class="row footer-content">
                <div class="col-lg">
                    <h4>CONTACT INFO</h4>

                    <p>PHONE: <br />+123 4567 890</p>
                    <p>EMAIL: <br />career.oguchemaureen@gmail.com</p>

                    <div class="social-icons mt-4">
                        <a href="https://www.twitter.com/MaureenMOguche" target="_blank"><i class="bi bi-twitter"></i></a>
                        <a href="https://www.likedin.com/in/maureenoguche" target="_blank"><i class="bi bi-linkedin"></i></a>
                        <a href="https://github.com/MaureenMOguche"><i class="bi bi-github"></i></a>
                    </div>
                </div>
                <div class="col-lg">
                    <h4>SITE MAP</h4>
                    <a href="#">About Us</a><br />
                    <a href="#">Special Offers</a><br />
                    <a href="#">My Account</a><br />
                    <a href="#">Order History</a><br />

                </div>
                <div class="col-lg">
                    <h4>SUBSCRIBE TO NEWSLETTER</h4>
                    <p>Get all the latest information on events, sales and offers. Sign up for newsletter:</p>
                    <form method="post">
                        <div class="subscribe">
                            <input type ="text" placeholder="Email Address"/>
                            <button class="btn-subscribe">Submit</button>
                        </div>
                    </form>
                </div>
            </div>

            <hr class="mt-5"/>

            <div class="row">
                <div class="col">
                    <p>&copy; Reen Clothing. Designed and Developed by 
                        <a href="https://github.com/MaureenMOguche">
                            Maureen Oguche</a>.<br />
                            <a href="https://wa.link/sy0vzi" target="_blank">
                                <i class="bi bi-whatsapp"></i>
                                08030411314</a>
                    </p>

                </div>
                <div class="col">
                    <div class="row">
                        <div class="col-7"></div>
                        <div class="col-3">
                            <img src="~/images/pageImages/Paystack.png" class="img-fluid"/>
                        </div>
                        <div class="col-2">
                            <img src="~/images/pageImages/stripe.png" class="img-fluid" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>