

<div class="details-container p-3">
	<div class="col-6">
		<div class="main-image">
			<img src="@Model.ProductImage" />
		</div>
		<div class="row">
			<div class="col">
				<img src="@Model.ProductImage" class="img-thumbnail"/>
			</div>
		</div>
	</div>
	<div class="col-6">
		<h2>@Model.ProductName</h2>
		<div class="rating">
			<i class="bi bi-star-fill"></i>
			<i class="bi bi-star-fill"></i>
			<i class="bi bi-star-fill"></i>
			<i class="bi bi-star-fill"></i>
			<i class="bi bi-star-fill"></i>
		</div>
		<hr />

		<p>@Model.ProductDescription</p>
		<h3>@Model.Price</h3>
		<p>AVAILABILITY: <span>IN STOCK</span></p>
		<div class="size">

		</div>

		<hr />

		<div class="cart-buttons">
			<div class="row">
				<div class="col"></div>
				<div class="col"></div>
				<div class="col">
					<a class="btn btn-dark">
						<i class="bi bi-shopping"></i>
						ADD TO CART
					</a>
				</div>
			</div>
		</div>

		<div class="cart-socials">
			<dvi class="row">
				<i class="bi bi-facebook"></i>
				<i class="bi bi-twitter"></i>
				<i class="bi bi-linkedin"></i>
				<i class="bi bi-googleplus"></i>
				<i class="bi bi-envelope"></i>
			</dvi>
		</div>

	</div>
</div>