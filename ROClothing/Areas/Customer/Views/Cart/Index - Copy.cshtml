@using ROClothing.Models.ViewModels;
@model ShoppingCartVM;
@{
    ViewData["Title"] = "Index";
}

<div class="container mt-3">
    <div class="row">
        <div class="col-8">
            <h2>Shopping Cart</h2>
            <hr />

            <table class="table-striped">
                @*<thead>
                    <tr>
                        <th></th>
                    </tr>
                </thead>*@
                <tbody>
                    @foreach (var item in Model.cartList)
                    {
                        <tr>
                            <td style="width: 15%">
                                <img class="img-fluid" src="@item.Product.ProductImage">
                            </td>
                            <td style="width: 40%" class="text-center" valign="middle">
                                <h5>@item.Product.ProductName</h5>
                            </td>
                            <td style="width: 35%" class="text-center" valign="middle">
                                <div class="row">
                                    <div class="col">
                                        <div class="row">
                                            <div class="col">
                                                <a asp-action="MinusCartItem" asp-route-cartId="@item.Id" class="btn">-</a>
                                            </div>
                                            <div class="col">
                                                <h6>@item.NoOfItems</h6>
                                            </div>
                                            <div class="col">
                                                <a asp-action="PlusCartItem" asp-route-cartId="@item.Id" class="btn">+</a> X
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <h5>@item.Product.Price</h5>
                                    </div>
                  
                                </div>
                            </td>
                            <td style="width: 10%" class="text-center" valign="middle">
                                <a asp-action="DeleteItem" class="btn text-danger"> <i class="bi bi-x-circle"></i> </a>
                            </td>
                        </tr>

                    }
                    <tr>
                        <td colspan="2">
                            <a asp-controller="CProduct" asp-action="Index" class="btn text-highlight">
                                <i class="bi bi-arrow-left-short"></i> Continue Shopping
                            </a>
                        </td>
                        <td colspan="2">
                            <p class="text-secondary">Subtotal: <span class="text-dark"><h3>@Model.cartTotal</h3></span></p>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-4">
            <div class="bg-dark p-3">
                <h2>Card details</h2>
                <br />

                <div class="row card-paparazi">
                    <div class="col">
                        <img src="~/images/pageImages/visa.png" class="img-fluid" />
                    </div>
                    <div class="col">
                        <img src="~/images/pageImages/mastercard.png" class="img-fluid"/>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
