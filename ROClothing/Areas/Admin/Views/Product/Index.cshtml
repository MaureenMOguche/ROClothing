@using ROClothing.Models.ViewModels;
@model IEnumerable<Product>;

<div class="product-shop-header">
    <img src="~/images/pageImages/product-mgt-header.png" class="w-100"/>
</div>

<div class="container mt-4 mb-4">
    <div class="row">
        <div class="col text-end">
            <a><i class="bi bi-grid view-type"></i></a>
        </div>
        <div class="col">
            <a><i class="bi bi-list view-type"></i></a>
            <a class="btn bg-highlight" asp-action="Upsert">Create Product</a>
        </div>
    </div>

    <div class="col-lg-10 m-auto">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th style="width: 10%">Product Image</th>
                    <th style="width: 45%">Product Name</th>
                    <th>Product Price</th>
                    <th>Product Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr class="text-center">
                        <td>
                            <img src="@item.ProductImage" class="img-thumbnail">
                        </td>
                        <td valign="middle">@item.ProductName</td>
                        <td valign="middle">@item.Price</td>
                        <td valign="middle">
                            <a class="btn btn-secondary" asp-action="Upsert" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                            <a class="btn btn-danger" asp-action="Upsert" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>




